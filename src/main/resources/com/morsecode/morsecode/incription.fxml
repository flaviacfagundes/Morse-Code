<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="450.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.morsecode.morsecode.controller.IncriptionController">
    <VBox styleClass="incription-container" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
        <Text styleClass="h1" text="Conversor de Código Morse"> <font>
            <Font size="26.0" />
        </font> </Text>
        <HBox styleClass="io-box">
            <VBox styleClass="io-column" HBox.hgrow="ALWAYS">
                <Label styleClass="h2" text="INPUT do texto:" />
                <TextArea fx:id="inputTextArea" prefWidth="433.0" promptText="Digite seu texto aqui..." styleClass="text-area" wrapText="true" VBox.vgrow="ALWAYS" />
            </VBox>
            <VBox alignment="CENTER" styleClass="io-column" HBox.hgrow="ALWAYS">
                <Label styleClass="h2" text="OUTPUT do texto:" />
                <TextArea fx:id="outputTextArea" editable="false" promptText="O resultado aparece-ra aqui..." styleClass="text-area" wrapText="true" VBox.vgrow="ALWAYS" />
            </VBox>
        </HBox>
        <HBox alignment="CENTER" spacing="10.0">
            <Button onAction="#handleEncrypt" text="Criptografar (Texto -&gt; Morse)" HBox.hgrow="ALWAYS" />
            <Button onAction="#handleDecrypt" text="Descriptografar (Morse -&gt; Texto)" HBox.hgrow="ALWAYS" />
            <Button onAction="#handleShowTree" text="Visualizar Árvore Binária" />
            <Button onAction="#handleClear" styleClass="button-outline" text="Limpar Campos" />
        </HBox>
    </VBox>
    <stylesheets>
        <URL value="@../../../styles/style.css" />
        <URL value="@../../../styles/incription.css" />
    </stylesheets>
</AnchorPane>
